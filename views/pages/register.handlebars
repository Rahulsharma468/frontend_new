  function checkPass(){
    var pw1 = $("#pw").val();
    var pw2 = $("#password2").val();
    if(pw1!=pw2){
      $("#pw").css("border","3px solid red");
      $("#password2").css("border","3px solid red");
      return false;
    }
    else{
      $("#pw").css("border","3px solid green");
      $("#password2").css("border","3px solid green");
      return true;
    }
  }
  $(document).ready(function(){
    $("#pw","#pw2").keyup(checkPass);
  })
</script>
{{#if errors}}
    <center>
    <div class="alert alert-danger alert-dismissible fade show col-md-4 col-md-offset-4" style="margin:2%" role="alert">
    Email already in use!
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
    </button>
    </div>
    </center>
  {{/if}}

<div
  class="d-flex justify-content-center align-items-center container"
  style="margin-top: 6%;"
>
  <div class="row">
    
    <center>
      <h1>Register</h1>
    </center>
    <form method="POST" class="form-signin" id="regform" action="/users/register" onsubmit="return checkPass()" data-parsley-validate>
      <div class="form-group">
        <input
          type="text"
          name="name"
          id="name"
          class="form-control"
          placeholder="Name"
          required=""
        />
      </div>
      <div class="form-group">
        <input
          class="form-control"
          type="email"
          name="email"
          id="email"
          placeholder="Email"
          required=""
        />
      </div>

      <div class="form-group">
        <input
          class="form-control"
          type="password"
          name="password"
          id="pw"
          autocomplete="off"
          placeholder="Password"
          required=""
          minlength="6"
        />
      </div>
      <div class="form-group">
        <input
          class="form-control"
          type="password"
          name="password2"
          id="password2"
          autocomplete="off"
          onchange="checkPass();"
          placeholder="Re-enter Password"
          required=""
          minlength="6"
          data-parsley-equalto="#pw"
        />
      </div>
      <button
        class="btn btn-lg btn-outline-primary btn-block angled-gradient-button"
        type="submit"
      >Submit</button>
      <p class="mt-5 mb-3 text-muted">Already have an account?
        <a href="/users/login">Login Here</a></p>
    </form>
  </div>
</div>
